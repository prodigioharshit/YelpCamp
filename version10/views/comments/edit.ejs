<%- include('../partials/header') %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit Comment</h1>
        <div style="width: 30%; margin: 30px auto;" >
        <form action="/campgrounds/<%= campground_id %>/comments/<%=comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="Comment">Write A Comment..</label>
                <input class="form-control" type="text" name="comment[text]" val="<%=comment.text %>">
            </div>
          
            
           <div class="form-group">
              <button class="btn btn-large btn-success" type="submit">Submit!</button>
           </div>
        </form>
        <a href="/campgrounds">Go Back!</a>
    </div>
        
    </div>
</div>

