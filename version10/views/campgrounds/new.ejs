<%- include('../partials/header') %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a new Campground</h1>
        <div style="width: 30%; margin: 30px auto;" >
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <label for="newCampground">Name of Campground</label>
                <input class="form-control" type="text" name="name" placeholder="new campground">
            </div>
           
            <div class="form-group">
                <label for="Image URL">Image URL</label>
              <input class="form-control" type="text" name="image" placeholder="image url">
           </div>
            
            <div class="form-group">
                <label for="Description">Description</label>
              <input class="form-control" type="text" name="description" placeholder="description">
           </div>
           
           <div class="form-group">
              <button class="btn btn-large btn-primary btn-block" type="submit">Submit!</button>
           </div>
        </form>
        <a href="/campgrounds">Go Back!</a>
    </div>
        
    </div>
</div>

<%- include('../partials/footer') %>